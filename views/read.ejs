<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div class="w-full h-full bg-zinc-900 text-white p-10">
      <a class="text-blue-500" href="/">Back to home! .. </a>
      <h1 class="text-3xl tracking-tighter mb-7 mt-10">All Users !</h1>
      <div class="users flex gap-5 flex-wrap">
        <% if(users.length>0) {%> <% users.forEach((user) => { %>
        <div class="user w-72 bg-zinc-800 p-4 rounded-lg">
          <div class="w-full h-72 rounded-lg bg-zinc-700 overflow-hidden">
            <img
              src="<%=user.imageURL %>"
              class="w-full h-full object-cover cover-top"
              alt="Not showing image"
            />
          </div>
          <h3 class="text-xl tracking-tighter mt-4"><%=user.name %></h3>
          <h5 class="text-zinc-500 mt-1"><%=user.email %></h5>
          <div class="flex gap-4 mt-10">
            <a href="/edit" class="text-yellow-500">Edit User</a>
            <a href="/delete" class="text-red-500">Delete User</a>
          </div>
        </div>
        <%}) %> <%} else {%>
        <h1>No users Yet...</h1>
        <%} %>
      </div>
    </div>
  </body>
</html>
